# Ubuntu服务器操作指南项目配置文件示例
# 复制此文件为 .env 并填入实际值

# ============================================
# 服务器连接配置
# ============================================

# Ubuntu服务器IP地址
UBUNTU_SERVER_IP=192.168.241.128

# Ubuntu服务器用户名
UBUNTU_SERVER_USER=ubuntu

# Ubuntu服务器密码
UBUNTU_SERVER_PASSWORD=2014

# SSH连接端口
SSH_PORT=22

# SSH密钥交换算法（兼容性配置）
SSH_KEX_ALGORITHM=curve25519-sha256@libssh.org

# ============================================
# 网络配置
# ============================================

# 代理服务器IP（如果使用代理）
PROXY_SERVER_IP=127.0.0.1

# 代理服务器端口
PROXY_SERVER_PORT=8080

# 网关地址
GATEWAY_IP=192.168.241.1

# DNS服务器地址
DNS_SERVERS=8.8.8.8,8.8.4.4

# ============================================
# SSH密钥配置
# ============================================

# SSH私钥文件路径
SSH_PRIVATE_KEY_PATH=~/.ssh/id_rsa

# SSH公钥文件路径
SSH_PUBLIC_KEY_PATH=~/.ssh/id_rsa.pub

# ============================================
# 系统配置
# ============================================

# 默认Shell
DEFAULT_SHELL=/bin/bash

# 系统语言环境
SYSTEM_LOCALE=en_US.UTF-8

# 时区设置
TIMEZONE=Asia/Shanghai

# ============================================
# 安全配置
# ============================================

# 防火墙允许的SSH端口
UFW_SSH_PORT=22

# 是否禁用root登录（true/false）
DISABLE_ROOT_LOGIN=true

# 是否启用密码认证（true/false）
ENABLE_PASSWORD_AUTH=true

# ============================================
# 软件源配置
# ============================================

# Ubuntu版本代号（自动检测，也可手动指定）
UBUNTU_CODENAME=focal

# 软件源镜像（aliyun/tuna/official）
PACKAGE_MIRROR=aliyun

# ============================================
# 备份配置
# ============================================

# 备份目录路径
BACKUP_DIR=/backup

# 备份保留天数
BACKUP_RETENTION_DAYS=7

# ============================================
# 开发配置
# ============================================

# 开发模式（true/false）
DEBUG_MODE=false

# 日志级别（DEBUG/INFO/WARN/ERROR）
LOG_LEVEL=INFO

# 是否启用详细输出（true/false）
VERBOSE_OUTPUT=true